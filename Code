import cv2
import numpy as np
import mediapipe as mp
import tensorflow as tf
from tensorflow.keras.models import load_model

# mediapipe
#hand recognition algorithm
hand_recog = mp.solutions.hands
# will detect only 1 hand in a frame
hands = hand_recog.Hands(max_num_hands=1, min_detection_confidence=0.7)
#will plot out the hand points
draw_hands = mp.solutions.drawing_utils

# Loading the pre defined gesture recognition
model = load_model('mp_hand_gesture')

# Load class of hand sign names
names = open('gesture.names', 'r')
classNames = names.read().split('\n')
names.close()
print(classNames)

# start the webcam
capture = cv2.VideoCapture(0)

while True:
    # Read each frame from the webcam
    _, frames = capture.read()

    x, y, c = frames.shape

    # Flip the frame vertically
    frames = cv2.flip(frames, 1)
    framergb = cv2.cvtColor(frames, cv2.COLOR_BGR2RGB)

    #  hand landmark prediction
    result = hands.process(framergb)

    # print(result)

    className = ''

    # processing the result further
    if result.multi_hand_landmarks:
        landmarks = []
        for handslms in result.multi_hand_landmarks:
            for lm in handslms.landmark:
                lmx = int(lm.x * x)
                lmy = int(lm.y * y)

                landmarks.append([lmx, lmy])

            # Drawing landmarks on frames
            draw_hands.draw_landmarks(frames, handslms, hand_recog.HAND_CONNECTIONS)

            # Predict gesture
            prediction = model.predict([landmarks])
            # print(prediction)
            classID = np.argmax(prediction)
            className = classNames[classID]

    # show the predictions on the frame
    cv2.putText(frames, className, (10, 50), cv2.FONT_HERSHEY_SIMPLEX,
                1, (0, 0, 255), 2, cv2.LINE_AA)

    # Show the final output
    cv2.imshow("Output", frames)

    if cv2.waitKey(1) == ord('q'):
        break

# release the webcam and destroy all active windows
capture.release()

cv2.destroyAllWindows()
